{{!< default}}
<div class="page-main">
{{#post}}
<div class="mask"></div>
<div class="container">
    <div class="container-main">
        <article class="post-page-main">
            <header class="animated2 fadeInDown">
                <h2>{{title}}</h2>
            </header>
            <section class="tags-page-content animated fadeInDown">
                {{! Tag Cloud }}
                {{#get "tags" limit="all" include="count.posts" order="count.posts desc" }}
                    {{#foreach tags}}
                        <a href="/tag/{{slug}}">{{name}}</a>
                    {{/foreach}}
                {{/get}}
            </section>
            <footer>

            </footer>
        </article>
    </div>
</div>
{{/post}}
{{> "footer"}}
</div>
