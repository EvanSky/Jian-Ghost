{{!< default}}
<div class="page-main">
{{#author}}
    <div class="mask"></div>
<header class="page-header">
    <div class="page-header-title">
        <h1><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
        <p>{{@blog.description}}</p>
    </div>
</header>
<div class="container">
    <div class="container-main">
{{#foreach posts}}
<article class="post-block">
    <header>
        <h2 class="animated2 fadeInDown"><a href="{{url}}">{{title}}</a></h2>
        <time datetime="{{date format="DD MMMM YYYY"}}">{{date format="DD MMMM YYYY"}}</time>
    </header>
    <section class="animated fadeInDown">
        {{excerpt characters="130"}}
    </section>
    <footer></footer>
</article>
{{/foreach}}
{{pagination}}
    </div>
</div>
{{/author}}
{{> "footer"}}
</div>
